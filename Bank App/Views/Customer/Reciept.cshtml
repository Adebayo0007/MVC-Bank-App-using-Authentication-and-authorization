    <div class="receipt">
      <div class="col">
        <p>Amount:</p>
      <h2 class="cost"># @Model.Amount</h2><br>
    
         <p> Account Balance:</p>
         <h2 class="seller"> # @Model.AccountBalance</h2>
         @if((int)Model.TransactType == 2 || (int)Model.TransactType == 3)
         {
            if(Model.Amount > 2000)
            {

             var charges = Model.Amount*0.005;
              <p> VAT:</p>
              <h2 class="seller"> # @charges</h2>
            }
            else
            {
                  <p> VAT:</p>
              <h2 class="seller"> # 0</h2>
            }
         }
         
      </div>
      <div class="col">
        

        <p>Date:</p>
        <h3 class="bought-items">@Model.DateCreated</h3>
        @* <p class="bought-items description">Gaming mouse with shiny lights</p>
        <p class="bought-items price">$200 (50% discount)</p><br> *@
         @if(@Model.RecipientAccountNumber != null)
         {
             <h3 class="bought-items">To:</h3>
            <p class="bought-items description">@Model.RecipientAccountNumber</p>
            

         }
          <h3 class="bought-items">Type of Transaction:</h3>
            <p class="bought-items description">@Model.TransactType</p> <br>
         <h3 class="bought-items">Description:</h3>
            <p class="bought-items description">@Model.Description</p><br>
            <h3 class="bought-items">Ref Number:</h3>
            <p class="bought-items description">@Model.RefNum</p><br>
            
       
      </div>
      <p class="comprobe">Thanks for Banking With us</p>
     
    </div>
