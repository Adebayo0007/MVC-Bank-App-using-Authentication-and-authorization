                       <label asp-for="AccountType" class="control-label"></label>
                 <select asp-for = "AccountType" asp-items="Html.GetEnumSelectList<AccountType>()"></select>
                </div>

                   <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                       <label asp-for = "Email" class = "control-label"></label>
                       <input type = "email" asp-for = "Email" class = "form-control"  placeholder="williams@gmail.com" required/>
                       <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                      <label asp-for = "ConfirmEmail" class = "control-label"></label>
                       <input type = "email" asp-for = "ConfirmEmail" class = "form-control"  placeholder="williams@gmail.com" required/>
                      <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                </div>

                
                <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                       <label asp-for = "PassWord" class = "control-label"></label>
                    <input asp-for = "PassWord" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" type="password" id="pass" name="password" class = "form-control"  placeholder="Password must be 6 characters,consist at least one capital letter,one small letter,and also a number" required/>
                   <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
                  <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                       <label asp-for = "ConfirmPassWord" class = "control-label"></label>
                    <input asp-for = "ConfirmPassWord" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" type="password" id="pass" name="password" class = "form-control"  placeholder="Password must be 6 characters,consist at least one capital letter,one small letter,and also a number" required/>
                   <span asp-validation-for="ConfirmPassWord" class="text-danger"></span>
                </div>

                 <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                       <label asp-for = "PhoneNumber" class = "control-label"></label>
                      <input asp-for = "PhoneNumber" class = "form-control"  placeholder="+2348034254356" required/>
                  <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                 <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@
              <label asp-for = "Pin" class = "control-label"></label>
            <input asp-for = "Pin"  minlength="4" maxlength="4" class = "form-control"  placeholder="Enter four secrete number" required/>
            <span asp-validation-for="Pin" class="text-danger"></span>
                </div>


                @* <div class="input-wrapper">
                    <label for="">Email</label>
                    <input type="text" name="" id="" placeholder="Enter your email address">
                </div>
                <div class="input-wrapper">
                    <label for="">Needed Services</label>
                    <select name="" id="">
                        <option value="1" selected >Choose Services</option>
                        <option value="2">Bricklayer</option>
                        <option value="2">Tailor</option>
                    </select>
                </div>
                <div class="input-wrapper">
                    <label for="">Budget</label>
                    <select name="" id="">
                        <option value="1" selected>Select Budget</option>
                        <option value="2">$5,000</option>
                        <option value="3">$10,000</option>
                    </select>
                </div>
                <div class="input-wrapper">
                    <label for="">Message</label>
                    <textarea name="" id="" rows="4" placeholder="Your message here.."></textarea>
                </div> *@
              
                <div  id="btn">
                    <button type="submit" value="Submit">Submit</button>
                    @* <a href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal">Submit</a> *@
                    
                    </span>
                     @if(TempData.Peek("exist") != null )
                        {
                        <script type="text/javascript">
                        window.onload = function(){
                            alert("@TempData.Peek("exist")")
                        }
                        </script>
                        }
            </form>
        </div>
    </div>
      </div>
                @section Scripts {
             @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                }
</body>

</html>





































