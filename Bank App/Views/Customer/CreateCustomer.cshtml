<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
    integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,200;0,400;0,700;0,900;1,400;1,600;1,900&family=Poppins:ital,wght@0,300;0,500;0,600;0,800;1,300;1,700&family=Rufina:wght@400;700&display=swap"
        rel="stylesheet">
    <title>Registration</title>
    <style>

        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.container {
    height: 1300px;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgb(130, 178, 226);
    background: linear-gradient(45deg, rgba(130, 178, 226, 1) 0%, rgba(197, 98, 240, 1) 100%);
}

.form-wrapper {
    font-family: 'Poppins', sans-serif;
    height: 100%;
    width: 500px;
    background-color: white;
    border-radius: 15px;
    padding: 20px 40px;
    box-shadow: rgba(0, 0, 0, 0.25) 0px 54px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
}

.form-wrapper h1 {
    text-align: center;
    color: rgba(0, 0, 0, 0.738);
}

.form-wrapper form {
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.input-wrapper {
    display: flex;
    flex-direction: column;
}

.input-wrapper label {
    font-size: 14px;
    font-weight: 600;
    color: rgba(0, 0, 0, 0.592);
}
.input-wrapper input::placeholder,
.input-wrapper input,
.input-wrapper select,
.input-wrapper textarea,
.input-wrapper textarea::placeholder {
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    font-weight: 600;

}

.input-wrapper input::placeholder,
.input-wrapper textarea::placeholder {
    color: rgba(0, 0, 0, 0.3);
}

.input-wrapper input,
.input-wrapper select,
.input-wrapper textarea {
    border: none;
    padding: 10px 0 15px 0;
    border-bottom: 3px solid rgba(0, 0, 0, 0.3);
    outline: none;
}

.input-wrapper textarea {
    resize: none;
}

#btn {
    margin-top: 10px;
    padding: 10px 0;
    border-radius: 140px;
    display: flex;
    color: white;
    justify-content: center;
    gap: 10px;
    font-size: 18px;
    background: rgb(197, 98, 240);
    background: linear-gradient(25deg, rgba(197, 98, 240, 1) 0%, rgba(130, 178, 226, 1) 100%);
}
input:valid{
    text-decoration-color: green;
}
input:invalid{
    text-decoration-color: red;
}
button{
    background-color: none;
}
input::placeholder{
    font-style: italic;
    font-size: smaller;
    font-weight: lighter;
}
    </style>
</head>

<body>
    <div class="container">
        <div class="form-wrapper">
            <h1>Registration Form!</h1>
            <form enctype="multipart/form-data" asp-action="CreateCustomer" method="post">
            @if(TempData["success"] != null)
             
             {
                <h2>@TempData["success"]</h2>
               }

               @if(TempData["age"] != null)
             {
                <h3 style="color: red;">@TempData["age"]</h3>
               }
                  @if(TempData["pix"] != null)
             {
                <h3 style="color: red;">@TempData["pix"]</h3>
               }

                <div class="input-wrapper">
                    <label asp-for="ProfilePicture" style="width: 100%;"></label>           
                     <input type="file"
                       id="profilePicture"
                       accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="ProfilePicture"
                       class="form-control"
                       style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                       onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>


                <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                     <label asp-for = "FirstName" class = "control-label"></label>
                     <input asp-for = "FirstName" class = "form-control" placeholder="Alexander" required/>
                     <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                  <div class="input-wrapper">
                    @* <label for="">Your Name</label>
                    <input type="text" name="" id="" placeholder="Enter your name"> *@

                     <label asp-for = "LastName" class = "control-label"></label>
                     <input asp-for = "LastName"   class = "form-control" placeholder="Williams" required/>
                      <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                   <div class="input-wrapper">
