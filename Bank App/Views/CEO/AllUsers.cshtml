<head>
@{
    ViewData["Title"] = "CEO Portal";
}
<h3 style = "font-family:cabri;font-size : 20px;">@ViewData["Title"]</h3>
<style>
    #trans{
    border: solid pink 1px;
    width: 150px;
    height: 100px;
    background-color: #b58900;
    text-align: center;
  }
  #trans:hover{
    background-color: green;
  }
</style>

</head>

<div class="text-center">
    <h1  style = "font-family:cabri;font-size : 60px;"class="display-4">Welcome</br>Manage Your Users</h1>
     <h1  style = "font-family:cabri;font-size : 30px;"class="display-4"><marquee direction = "left">Thanks for coming</marquee></h1>
</div>
<br><br><br>
<div style="display: flex;gap:13%;">
     <div >
            <a  id="trans" asp-controller = "Manager" asp-action = "Managers" class = "btn btn-primary">
                <i class="bi bi-pencil-fill"></i>Manage Managers

            </a>
</div>

 <div  >
            <a id="trans" asp-controller = "Admin" asp-action = "Admins"  class = "btn btn-primary">
              <i class="bi bi-pencil-fill"></i>Manage Admins

            </a>
</div>
<div  >
            <a id="trans" asp-controller = "Customer" asp-action = "Customers"  class = "btn btn-primary">
                <i class="bi bi-pencil-fill"></i>Manage Customers

            </a>
</div>
<div  >
            <a id="trans" asp-controller = "Home" asp-action = "Users"  class = "btn btn-primary">
                <i class = "bi bi-plus-circle"></i>All Users

            </a>
</div>
</div>
 